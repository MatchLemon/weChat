/* pages/component/list-item.wxss */
.item-image {
  width: 200rpx;
  height: 200rpx;
  background: #eeeeee;
   flex-shrink:0;
   border-radius: 4px;
}
.item-right {
  display: inline-block;
   padding: 0 10px; 
}
.list-item {
  /* display: block;
  overflow: hidden; */
  display: flex; 
  font-size: 35rpx;
  background: #f5f5f5;
  border: 1px solid #e1e1e8;
  border-radius: 4px;
  margin: 5px 0px;
}
.item-title {
    display: block;
  }
.item-des {
  display: block;
    overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical; 
   -webkit-line-clamp:2;  
  font-size: 28rpx;
  color: #888888;
  height: 85rpx;
}
.item-data {
    font-size: 30rpx;
}